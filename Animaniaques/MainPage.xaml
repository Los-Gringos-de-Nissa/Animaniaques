<Page
    x:Class="Animaniaques.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Animaniaques"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="LayoutMain">
        <Grid.Background>
            <ImageBrush ImageSource="/Res/background-img-ani.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,64,0,0">
            <TextBlock Margin="0,20,0,0" HorizontalAlignment="Center" FontSize="40" Text="Bienvenue à toi jeune animaniaque !"></TextBlock>
            <TextBlock Text="Entrez votre prénom : "></TextBlock>
            <TextBox x:Name="Prenom" PlaceholderText ="Prenom"></TextBox>
        </StackPanel>
        <Button x:Name="btn_main" FontSize="20" CornerRadius="40" Background="CadetBlue" Content="Lancez vous !" Click="Button_Nav" HorizontalAlignment="Center" Height="200" Width="200"/>
        <TextBlock x:Name="txb_loading" Visibility="Collapsed" Text="On charge votre page !" FontSize="30" Margin="0,358,0,0" HorizontalAlignment="Center" Height="652" VerticalAlignment="Top" Width="103"></TextBlock>
    </Grid>
</Page>
